{
  "manifest_version": 2,
  "name": "Background BGM Extension",
  "version": "1.0",
  "description": "常にバックグラウンドでBGMをかける拡張機能",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "background"
  ],
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "web_accessible_resources": [
    "background.png"
  ]
}