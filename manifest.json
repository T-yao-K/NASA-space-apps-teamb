{
  "manifest_version": 3,
  "name": "Background BGM Extension",
  "version": "1.0",
  "description": "常にバックグラウンドでBGMをかける拡張機能",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs"
  ],
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "png/background.png",
        "audio.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons":{
    "16": "./png/icon-16.png",
    "128": "./png/icon-128.png"
  }
}