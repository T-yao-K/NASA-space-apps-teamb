{
  "manifest_version": 3,
  "name": "Background BGM Extension",
  "version": "1.0",
  "description": "新しいタブを開いたときにBGMを再生し、任意で停止できる拡張機能",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "png/space.png",
        "audio/audio.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "./png/icon-16.png",
    "128": "./png/icon-128.png"
  }
}
